(2, 3);


INSERT INTO users (nome, email, idade) values
('Fabio', 'fabio@example.com', 28);

SELECT * FROM users;


SELECT * FROM users WHERE id = 1;
SELECT * FROM users WHERE email = 'joao@example.com';


SELECT * FROM pedidos;


SELECT * FROM pedidos WHERE id = 1;


SELECT * FROM produtos;


